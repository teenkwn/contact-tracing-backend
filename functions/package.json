    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^8.6.0",
    "firebase-functions": "^3.3.0",
    "nodemailer": "^6.4.2",
    "uuidv4": "^6.0.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.1.6",
    "nodemon": "^2.0.2"
